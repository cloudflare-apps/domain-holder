{
  "resources": {},
  "preview": {
    "hide": true
  },
  "dns": [
    {
      "type": "A",
      "name": "{{#options.subdomain}}{{options.subdomain}}{{/options.subdomain}}{{^options.subdomain}}@{{/options.subdomain}}",
      "content": "165.227.80.250"
    },
    {
      "type": "TXT",
      "name": "dh",
      "content": "user:{{options.account.username}};price:{{options.price}}"
    }
  ],
  "options": {
    "properties": {
      "account": {
        "title": "DomainHolder Account",
        "description": "Login or create a DomainHolder account",
        "type": "object",
        "format": "account",
        "order": 0,
        "required": true,
        "services": ["domain-holder"]
      },
      "location": {
        "title": "Parking page location",
        "type": "string",
        "enum": [
          "root",
          "subdomain"
        ],
        "enumNames": {
          "root": "Use my entire site as the domain parking page",
          "subdomain": "Create a new subdomain to use as my parking page"
        },
        "default": "subdomain",
        "order": 10
      },
      "subdomain": {
        "title": "Subdomain",
        "description": "The subdomain of your site you would like the parking page installed on. Should not already be used.",
        "order": 20,
        "type": "string",
        "default": "buy",
        "showIf": {
          "location": "subdomain"
        }
      },
      "price": {
        "title": "Price",
        "description": "The price you are selling this site for in US Dollars",
        "type": "integer",
        "order": 30,
        "default": 5000
      }
    }
  }
}
